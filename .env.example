# Variables de entorno para la aplicación de Trading con IA
# Copia este archivo a .env y completa los valores

# === BINANCE API ===
# Obtén tus API keys desde: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# === BASE DE DATOS ===
# Ruta de la base de datos SQLite
DATABASE_PATH=data/trading.db

# === CACHÉ ===
# Configuración de Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# === LOGGING ===
# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# === CONFIGURACIÓN GENERAL ===
# Entorno de ejecución (development, production)
ENVIRONMENT=development

# === CONFIGURACIÓN DE DATOS ===
# Intervalo por defecto para obtener datos
DEFAULT_INTERVAL=1h

# Días hacia atrás por defecto
DEFAULT_DAYS_BACK=30

# === MONITOREO ===
# Habilitar métricas
ENABLE_METRICS=true

# Habilitar health checks
ENABLE_HEALTH_CHECKS=true

